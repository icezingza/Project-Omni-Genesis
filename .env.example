# ==========================================
# Project Omni-Genesis: Environment Variables
# ==========================================
# Copy this to .env and customize for your environment.
# DO NOT commit .env to version control!

# --- Application ---
APP_NAME=Project Omni-Genesis
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# --- Security (CHANGE IN PRODUCTION!) ---
SECRET_KEY=omni-genesis-super-secret-change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# --- Database ---
# SQLite (default for development):
DATABASE_URL=sqlite+aiosqlite:///./omni_genesis.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/omni_genesis

# --- Redis (optional, for caching/rate limiting) ---
# REDIS_URL=redis://localhost:6379/0

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=30
AUTH_RATE_LIMIT_PER_MINUTE=10

# --- AI / Golden Ratio ---
PHI=1.618033988749895
GOLDEN_RATIO_BALANCE_THRESHOLD=0.15

# --- API Keys (optional) ---
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# --- Thai NLP ---
THAI_NLP_ENGINE=newmm

# --- PDPA Compliance ---
PDPA_REQUIRE_CONSENT=true
DATA_RETENTION_DAYS=90

# --- Monitoring (optional) ---
# SENTRY_DSN=https://your-sentry-dsn-here
